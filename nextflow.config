manifest {
    description = 'Metagenome population recombination rate estimation pipeline'
    nextflowVersion = '>= 20.10.0'
}


process {
    conda = 'environment.yaml'
    container = 'sidkris/rmeta:latest'

    executor = 'local'
    scratch = true
    cpus  = 4
    memory = 12.GB
    time = 4.h
    
}


docker {
    enabled = true
}


tower {
    accessToken = ''
    enabled = false
}